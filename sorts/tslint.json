{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rules": {
        "no-constant-condition": true,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "no-console": false,
        "max-line-length": [
            true,
            200
        ],
    }
}
